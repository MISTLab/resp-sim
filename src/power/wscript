#!/usr/bin/env python
# -*- coding: iso-8859-1 -*-

def build(bld):

    obj = bld.new_task_gen('cxx', 'staticlib')
    obj.target = 'powerframework'
    obj.source = 'power.cpp cache.cpp ecacti/ecacti_wrapper.cpp processor.cpp memory.cpp'
    obj.includes = '. ../utils ecacti'
    obj.export_incdirs = '.'
    obj.env.append_unique('LINKFLAGS', '-lm')
    obj.uselib_local = 'ecacti'
    obj.uselib = 'BOOST BOOST_FILESYSTEM'
