#!/usr/bin/env python

# Build

import Options

def build(bld):

    for arch in bld.lst_variants:
        if arch == 'default': continue
        obj = bld.new_task_gen('cc', 'staticlib')
        obj.env  = bld.env_of_name(arch).copy()

        if arch.startswith('ecos'):
            obj.source = 'empty.c'
        else:
            obj.find_sources_in_dirs('.')
        obj.name         = 'posixLayer_'+arch
        obj.target       = 'posixLayer_'+arch
        obj.export_incdirs = '.'
